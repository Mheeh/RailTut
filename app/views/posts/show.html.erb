<p>
  <b>Title:</b>
  <%=h @post.title %>

</p>

<p>
  <b>Body:</b>
  <%=h @post.body %>
</p>

<h2>Comments</h2>

<% @post.comments.each do |c| %>
  <p>
    <b><%=h c.name %> said: </b><br /><%=h c.body %>
    
  </p>
	<%= time_ago_in_words c.created_at %> ago
  <p>
    
  </p>
<% end %>

<%= link_to 'New Comment', new_post_comment_path(@post) %>
<%= link_to 'Back', posts_path %>